{
  "name": "app-sandbox-rnative",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/app-sandbox-rnative/src",
  "tags": ["scope:react-native"],
  "targets": {
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/app-sandbox-rnative",
        "command": "react-native start"
      },
      "configurations": {
        "reset-cache": {
          "command": "react-native start --reset-cache"
        }
      },
      "metadata": {
        "technologies": ["react-native", "repack"],
        "description": "Start Re.Pack development server"
      }
    },
    "run-ios": {
      "executor": "nx:run-commands",
      "dependsOn": ["sync-deps"],
      "options": {
        "cwd": "apps/app-sandbox-rnative",
        "command": "react-native run-ios"
      },
      "configurations": {
        "device": {
          "command": "react-native run-ios --device"
        },
        "simulator": {
          "command": "react-native run-ios --simulator=\"iPhone 15\""
        }
      },
      "metadata": {
        "technologies": ["react-native", "repack", "ios"],
        "description": "Run the app on iOS device or simulator"
      }
    },
    "run-android": {
      "executor": "nx:run-commands",
      "dependsOn": ["sync-deps"],
      "options": {
        "cwd": "apps/app-sandbox-rnative",
        "command": "react-native run-android"
      },
      "configurations": {
        "device": {
          "command": "react-native run-android --device"
        },
        "emulator": {
          "command": "react-native run-android"
        }
      },
      "metadata": {
        "technologies": ["react-native", "repack", "android"],
        "description": "Run the app on Android device or emulator"
      }
    },
    "bundle-ios": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "apps/app-sandbox-rnative",
        "command": "react-native bundle --platform ios --dev false --entry-file src/main.tsx --bundle-output ios/main.jsbundle"
      },
      "cache": true,
      "inputs": [
        "production",
        "^production"
      ],
      "outputs": [
        "{projectRoot}/ios/main.jsbundle"
      ],
      "metadata": {
        "technologies": ["react-native", "repack", "ios"],
        "description": "Bundle the iOS app for production using Re.Pack"
      }
    },
    "bundle-android": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "apps/app-sandbox-rnative",
        "command": "react-native bundle --platform android --dev false --entry-file src/main.tsx --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res"
      },
      "cache": true,
      "inputs": [
        "production",
        "^production"
      ],
      "outputs": [
        "{projectRoot}/android/app/src/main/assets/index.android.bundle"
      ],
      "metadata": {
        "technologies": ["react-native", "repack", "android"],
        "description": "Bundle the Android app for production using Re.Pack"
      }
    },
    "pod-install": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/app-sandbox-rnative/ios",
        "command": "pod install"
      },
      "dependsOn": ["sync-deps"],
      "metadata": {
        "technologies": ["ios", "cocoapods"],
        "description": "Install iOS CocoaPods dependencies"
      }
    },
    "sync-deps": {
      "executor": "@nx/react-native:sync-deps",
      "metadata": {
        "technologies": ["react-native"],
        "description": "Sync dependencies to native projects"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/app-sandbox-rnative/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/app-sandbox-rnative",
        "command": "tsc --build --emitDeclarationOnly"
      },
      "dependsOn": ["^typecheck"],
      "cache": true,
      "inputs": [
        "production",
        "^production",
        {
          "externalDependencies": ["typescript"]
        }
      ],
      "outputs": [
        "{projectRoot}/dist"
      ]
    }
  }
}


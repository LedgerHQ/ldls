{
  "name": "app-sandbox-rnative",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/app-sandbox-rnative/src",
  "projectType": "application",
  "targets": {
    "bundle-android": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx react-native bundle --entry-file src/main.tsx --platform android --dev false --bundle-output /tmp/index.android.bundle --assets-dest /tmp",
        "cwd": "apps/app-sandbox-rnative"
      }
    },
    "bundle-ios": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx react-native bundle --entry-file src/main.tsx --platform ios --dev false --bundle-output /tmp/index.ios.bundle --assets-dest /tmp",
        "cwd": "apps/app-sandbox-rnative"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nx run-many -t bundle-android bundle-ios",
        "cwd": "apps/app-sandbox-rnative"
      }
    }
  },
  "tags": ["scope:react-native", "type:ui"]
}

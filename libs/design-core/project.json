{
  "name": "@ledgerhq/lumen-design-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/design-core/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:util"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsc -p tsconfig.lib.json",
        "cwd": "libs/design-core"
      }
    },
    "figma-export": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx ./src/figma/exportDesignTokens.ts",
        "cwd": "libs/design-core"
      }
    },
    "code-syntax": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx ./src/figma/updateCodeSyntax.ts",
        "cwd": "libs/design-core"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --run",
        "cwd": "libs/design-core"
      }
    },
    "design-tokens-etl": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx ./automations/designTokensEtl.ts",
        "cwd": "libs/design-core"
      },
      "dependsOn": ["build"]
    },
    "figma-download-svgs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx ./automations/figmaDownloadSvgs.ts",
        "cwd": "libs/design-core"
      }
    },
    "generate-symbols-react": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx libs/design-core/automations/generate-symbols.mts --templatePath libs/ui-react/src/utils/icon-template.ts --outputPath libs/ui-react/src/lib/Symbols"
      },
      "dependsOn": ["^build"]
    },
    "generate-symbols-react-native": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx libs/design-core/automations/generate-symbols.mts --templatePath libs/ui-rnative/src/utils/icon-template.ts --outputPath libs/ui-rnative/src/lib/Symbols --isReactNative true"
      },
      "dependsOn": ["^build"]
    }
  }
}
